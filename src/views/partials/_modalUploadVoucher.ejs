
<div
    class="modal fade"
    id="modalUploadVoucher"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Pagar Cuota</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <p>Selecciona la cuota a pagar:</p>
          <form enctype="multipart/form-data" action="/files" method="POST">
            <select name="userDueName" required class="form-select">
                <% if (Array.isArray(locals.finalUserDues)) { %>
                  <% finalUserDues.forEach((userDue, index)=>{ %>
                    <% if (userDue) { %>
                      <% if (userDue.due) { %>
                        <option <%- indexSelected===index?"selected":"" %> ><%- userDue.due.name %></option>
                      <% } %>
                    <% } %>  
                  <% }) %>
                <% } %> 
            </select>
            <div class="form-group my-3">
              <input
                id="inputFileVoucherIndex"
                name="file"
                required
                type="file"
                accept="image/*"
                class="form-control"
                
              />
              <img class="mt-3 d-block mx-auto d-none" id="output" />
              
              
            </div>
            <div class="modal-footer pb-0">
              <button type="submit" <%- Array.isArray(finalUserDues)?finalUserDues.length<=0?'disabled':'':'disabled' %>  class="btn btn-success">
                Save changes
              </button>
              <button
                type="button"
                class="btn btn-danger"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
          </form>
        </div>
       
      </div>
    </div>
  </div>